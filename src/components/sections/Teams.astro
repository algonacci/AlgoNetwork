---
const teamMembers = [
  { name: "Eric Julianto", position: "Director", imageUrl: "/images/teams/eric.jpeg" },
  { name: "Denis Setiawan", position: "Product Officer", imageUrl: "/images/teams/denis.png" },
  { name: "Alifio Wibowo", position: "Marketing Officer", imageUrl: "/images/teams/alifio.png" },
  { name: "Dian Alhusari", position: "Operational Officer", imageUrl: "/images/teams/dian.png" },
  { name: "Muhammad Rizky Fatahillah", position: "Creative Officer", imageUrl: "/images/teams/fatah.png" },
  { name: "Ramadhani Alfarizi", position: "Technology Officer", imageUrl: "/images/teams/rama.png" },
  { name: "Fadhel Muhammad Apriansyah", position: "Learning Officer", imageUrl: "/images/teams/fadhel.png" },
  { name: "Jemmy Febryan", position: "Human Resource Officer", imageUrl: "/images/teams/jemmy.png" },
  { name: "Abadi Suryo", position: "Innovation Officer", imageUrl: "/images/teams/abadi.png" },
];
---
<div class="container mx-auto p-6">
    <div class="flex flex-wrap justify-center -mx-4">
      <!-- Dynamic Team Members -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
        {teamMembers.map((member, index) => (
          <div  class="w-full px-4 pt-4">
            <div class="p-4 rounded-3xl border border-box-border bg-box-bg shadow-lg shadow-box-shadow relative overflow-hidden text-center">
              <img src={member.imageUrl} alt="Team Member" class="w-full h-56 rounded-lg object-cover object-center">
              <div class="mt-4">
                <h3 class="font-bold text-lg text-white">{member.name}</h3>
                <p class="text-white">{member.position}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
      
    </div>
</div>

